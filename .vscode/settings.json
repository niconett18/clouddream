{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    "class:\\s*[\"'`]([^\"'`]*)[\"'`]",
    "className:\\s*[\"'`]([^\"'`]*)[\"'`]",
    "class\\s*=\\s*[\"'`]([^\"'`]*)[\"'`]",
    "className\\s*=\\s*[\"'`]([^\"'`]*)[\"'`]"
  ]
}
